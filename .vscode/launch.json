{

"version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "linux": {
                "program": "${workspaceRoot}/src/widget",
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
            },
            "osx": {
                "program": "${workspaceRoot}/src/widget",
                "MIMode": "lldb"
            },
            "windows": {
                "program": "${workspaceRoot}\\src\\widget.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\mingw-w64\\mingw64\\bin\\gdb.exe"
            },  
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/widget",
            "environment": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile & Link"
        }
    ]
}